<Window x:Class="AWSS3_UEM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3_UEM"
        mc:Ignorable="d"
        Title="TFM Sergio A.L. 2022" Height="580" Width="800">
    <Grid>
        <Menu x:Name="Menu" Height="30" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14">

            <MenuItem x:Name="menuGestorDatos" Header="Gestor Datos" Click="menuGestorDatos_Click">
                <MenuItem.Icon>
                    <Image Source="/.\Imagenes\datos.png" Stretch="Fill" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="menuCargaMasiva" Header="Carga masiva" Click="menuCargaMasiva_Click">
                <MenuItem.Icon>
                    <Image Source="/Imagenes/upload.png" />

                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="menuConsultas" Header="Consultas" Click="menuConsultas_Click">
                <MenuItem.Icon>
                    <Image Source="/Imagenes/consulta.png" />

                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <Image Source="/Imagenes/FondoTFM.jpeg" Margin="0,25,0,0" />
    </Grid>
</Window>

<Window x:Class="AWSS3_UEM.Ventanas.Carga_masiva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWSS3_UEM.Ventanas"
        mc:Ignorable="d"
        Title="Carga_masiva" Height="450" Width="430">
    <Grid>
        <Button x:Name="btnSeleccion" Content="Seleccionar carpeta" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="126" Height="31" Click="btnSeleccion_Click"/>
        <DataGrid x:Name="dtGrisFicheros"  Margin="11,68,11,33" IsReadOnly="True"/>
        <Button x:Name="btnEnviarFicheros" Content="Enviar ficheros" HorizontalAlignment="Left" Margin="150,0,0,5" VerticalAlignment="Bottom" Width="128" Height="23" Click="btnEnviarFicheros_ClickAsync"/>
        <Label x:Name="lblRuta" Content="-- Seleccione una carpeta --" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="405" Height="27" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
